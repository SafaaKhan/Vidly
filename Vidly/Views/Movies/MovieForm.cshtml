@model Vidly.ViewModels.GenreNewViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(false, "Please fix the following errors.", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreNewId)
        @Html.DropDownListFor(m => m.Movie.GenreNewId, new SelectList(Model.GenreNew, "Id", "Name"), "Select Movie type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.GenreNewId)
    </div><div class="form-group">
    @Html.LabelFor(m => m.Movie.Id)
    @Html.TextBoxFor(m => m.Movie.Id, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Movie.Id)
</div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">
        Save
    </button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");

   
}

